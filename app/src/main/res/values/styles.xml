<resources>

    <style name="AppTheme" parent="android:Theme.Material">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
    </style>

    <style name="ButtonFontStyle">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">1px</item>
        <item name="android:padding">0dip</item>
        <item name="android:layout_weight">0.15</item>
        <item name="android:background">@drawable/ripple_button</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="TextFontStyle">
        <item name="android:textSize">32sp</item>
        <item name="android:padding">0dip</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHighlight">#727171</item>
        <item name="android:layout_margin">0dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">0.7</item>
        <item name="android:layout_gravity">start</item>
    </style>

</resources>
